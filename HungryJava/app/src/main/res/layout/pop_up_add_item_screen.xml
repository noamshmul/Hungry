<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- AutoCompleteTextView for ingredient selection -->
    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select ingredient..."
        android:inputType="text"
        android:completionThreshold="1"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Container for NumberPicker -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <NumberPicker
            android:id="@+id/numberPicker_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"/>
    </LinearLayout>

    <!-- Add to Inventory Button -->
    <Button
        android:id="@+id/button_addItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>
