<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Test Connection"
        android:id="@+id/testButton"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fridgeButton"/>

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fridgeButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="fridge"
        android:id="@+id/fridgeButton"
        android:layout_marginBottom="800dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hungryButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="I'm Hungry"
        android:id="@+id/hungryButton"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@+id/fridgeButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>